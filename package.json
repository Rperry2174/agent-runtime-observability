{
  "name": "codemap",
  "version": "2.0.0",
  "description": "Real-time observability dashboard for AI coding agents (Cursor, Claude Code)",
  "type": "module",
  "private": true,
  "workspaces": ["server", "client"],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "build": "npm run build --workspace=server && npm run build --workspace=client",
    "test": "npm test --workspaces"
  },
  "keywords": ["observability", "tracing", "cursor", "claude-code", "agents"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
